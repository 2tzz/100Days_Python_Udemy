from turtle import Turtle , Screen

turtle = Turtle()
screen = Screen()
screen.bgcolor("black")
turtle.width(2)
turtle.speed(15)

screen.screensize(800, 800)

col = ('white', 'grey' ,'lightblue','cyan' )
for i in range (300):
    turtle.pencolor(col[i%4])
    turtle.forward(i * 4)
    turtle.right(91)

screen.exitonclick()